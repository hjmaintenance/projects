@inherits SettingUserInfoBase

<DxFormLayout CssClass="w-100 userifoMargin-50">
    <DxFormLayoutGroup CssClass="card-search-layout-group2" Caption="사용자 정보변경" ColSpanSm="6">        
        <DxFormLayoutItem Caption="회사번호:" ColSpanSm="12">
            <DxTextBox @bind-Text="@OfficeNum" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="휴대폰번호:" ColSpanSm="12">
            <DxTextBox @bind-Text="@Phone" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="주소1:" ColSpanSm="12">
            <DxTextBox @bind-Text="@Address1" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="주소2:" ColSpanSm="12">
            <DxTextBox @bind-Text="@Address2" />
        </DxFormLayoutItem>
        <DxFormLayoutItem ColSpanSm="12">
            <DxButton Text="저장"
                      RenderStyle="ButtonRenderStyle.Info"
                      RenderStyleMode="ButtonRenderStyleMode.Contained"
                      Click="OnUserInfoChanged" />
        </DxFormLayoutItem>
    </DxFormLayoutGroup>
    <DxFormLayoutGroup CssClass="card-search-layout-group3" Caption="비밀번호 변경" ColSpanSm="6">
        <Items>           
            <DxFormLayoutItem Caption="기존비밀번호:" ColSpanSm="12">
                <DxTextBox @bind-Text="@Password" Password="true" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="신규비밀번호:" ColSpanSm="12">
                <DxTextBox @bind-Text="@NewPassword" Password="true" />
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="비밀번호확인:" ColSpanSm="12">
                <DxTextBox @bind-Text="@ConfirmPassword" Password="true" />
            </DxFormLayoutItem>
            <DxFormLayoutItem ColSpanSm="12" >
                <DxButton Text="저장"
                          RenderStyle="ButtonRenderStyle.Info"
                          RenderStyleMode="ButtonRenderStyleMode.Contained"
                          Click="OnUserPasswordChanged" />
            </DxFormLayoutItem>
        </Items>
    </DxFormLayoutGroup>
</DxFormLayout>

<style>
    .card-search-layout-group2 {
        margin: 30px 0 0 0;
    }

    .setting-popup-size .userifoMargin-50 {
        margin-top:50px;
    }

    .card-search-layout-group3 .dxbl-fl-item > .dxbl-fl-ctrl{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    

    .card-search-layout-group2 .dxbl-fl-item > .dxbl-fl-ctrl{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
        .card-search-layout-group2 .dxbl-fl-item > .dxbl-fl-ctrl button {
            width: 20%;
            border: 0px;
            background-color: #003985;
            transition: all.3s ease;
        }

    .card-search-layout-group3 .dxbl-fl-item > .dxbl-fl-ctrl button {
        width: 20%;
        border:0px;
        background-color: #003985;
        transition:all.3s ease;
    }

        .card-search-layout-group3 .dxbl-fl-item > .dxbl-fl-ctrl button:hover {
            background-color: #033266;
            
        }

    .card-search-layout-group2 .dxbl-fl-item > .dxbl-fl-ctrl button:hover {
        background-color: #033266;       
    }
</style>