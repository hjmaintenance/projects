<DxFormLayout CssClass="w-100">    
    @{ /* content area */ }
  <DxFormLayoutGroup Caption="검침표 메뉴 활성 변경" CssClass="mit-content-area" Decoration="FormLayoutGroupDecoration.Card" ColSpanSm="12">
    <DxFormLayoutItem Caption="메뉴 활성" ColSpanSm="8">

      <DxRadioGroup Items="@Languages"

                    @bind-Value="@PreferredLanguage"
                    Layout="RadioGroupLayout.Horizontal"
                    CssClass="dx-demo-radio-group" />
    
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption=" " ColSpanSm="2">
      <DxButton Text="메뉴 활성 변경" Click="SaveData" />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption=" " ColSpanSm="2">
      검침표 메뉴 상태 : <strong>@PreferredLanguage</strong>
    </DxFormLayoutItem>
    </DxFormLayoutGroup>


  <DxFormLayoutGroup Caption="검침표 메일 발송" CssClass="" Decoration="FormLayoutGroupDecoration.Card" ColSpanSm="12">
    
    <DxFormLayoutItem Caption="조회 년월" ColSpanSm="4">
      <CommonDateEdit DisplayFormat="yyyy-MM-dd" @ref=@SendingMailDate />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="검침표 구분" ColSpanSm="4">
      <MitCombo CodeId="SD_MAIL_T" @ref=@SD_MAIL_T  />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption=" " ColSpanSm="4">
      <DxButton Text="알림 메일 발송" Click="SendMail" />
    </DxFormLayoutItem>

  </DxFormLayoutGroup>





</DxFormLayout>
