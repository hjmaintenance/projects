name: Push Email Notification

on:
  push:
    branches:
      - main 

jobs:
  send_email:
    runs-on: ubuntu-latest

    steps:
      - name: Send mail on push
        uses: dawidd6/action-send-mail@v3
        with:
          server_address: ${{ secrets.SMTP_HOST }}
          server_port: ${{ secrets.SMTP_PORT }}
          username: ${{ secrets.SMTP_USERNAME }}
          password: ${{ secrets.SMTP_PASSWORD }}
          subject: "[${{ github.repository }}] Push by ${{ github.actor }}"
          to: "quristyle@gmail.com, uspuni@gmail.com"   # ìˆ˜ì‹ ì ì—¬ëŸ¬ ëª…ì€ ì½¤ë§ˆ(,)ë¡œ êµ¬ë¶„
          from: "GitHub Actions <${{ secrets.SMTP_USERNAME }}>"
          body: |
            ğŸ“Œ Repository: ${{ github.repository }}
            ğŸ‘¤ Pushed by: ${{ github.actor }}
            ğŸ“ Commit message: ${{ github.event.head_commit.message }}
            ğŸ”— Compare changes: ${{ github.event.compare }}
